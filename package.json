{
  "name": "playwright-parallel-mcp",
  "version": "0.3.0",
  "description": "MCP server for parallel browser automation with isolated Playwright sessions",
  "type": "module",
  "bin": {
    "playwright-parallel-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "browser-automation",
    "playwright",
    "claude",
    "ai-agent",
    "parallel",
    "isolated-sessions"
  ],
  "author": "sumyapp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sumyapp/playwright-parallel-mcp"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^2.1.9",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
